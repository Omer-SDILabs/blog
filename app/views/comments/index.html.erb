<p id="notice">
    <%= notice %>
</p>
<h1>Comments</h1>

<% @comments.in_groups_of(1) do |group| %>
<div class="row">
    <% group.compact.each do |comment| %>
    <div class="col-md-4">
        <h5>
            <%= link_to comment.body, comment %>
        </h5>
    </div>
    <td>
        <%= comment.user_name %>
    </td>
    <% end %>
</div>
<% end %>
<br>
<%= link_to 'New Comment', new_comment_path %>